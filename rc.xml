<?xml version="1.0"?>
<labwc_config>
  <core>
    <decoration>server</decoration>
  </core>
  <windowSwitcher show="yes" preview="no" raise="no" outlines="no"/>
  <placement>
    <policy>center</policy>
  </placement>
  <desktops number="4"/>
  <keyboard>
    <default/>
    <keybind key="W-Return">
      <action name="Execute" command="ptyxis"/>
    </keybind>
    <keybind key="W-F5">
      <action name="Reconfigure"/>
    </keybind>
    <keybind key="W-Space">
      <action name="Execute" command="wofi --show drun"/>
    </keybind>
    <keybind key="W-X">
      <action name="Execute" command="labwc -e"/>
    </keybind>
    <keybind key="W-E">
      <action name="Execute" command="pcmanfm-qt"/>
    </keybind>
    <keybind key="W-F">
      <action name="Execute" command="firefox"/>
    </keybind>
    <keybind key="XF86_MonBrightnessUp">
      <action name="Execute" command="brightnessctl s 10%+"/>
    </keybind>
    <keybind key="XF86_MonBrightnessDown">
      <action name="Execute" command="brightnessctl s 10%-"/>
    </keybind>
    <keybind key="W-F9">
      <action name="Execute">
        <command>
          sh -c 'labwc-menu-generator -I &gt; ~/.config/labwc/menu.xml'
        </command>
      </action>
    </keybind>
    <keybind key="W-L">
      <action name="Execute">
        <command>
        sh -c 'swaylock --image /home/kodehawa/Im&#xE1;genes/Wallpapers/wallhaven-9djdkw.png --scaling fill --font "IBM Plex Sans"'
        </command>
      </action>
    </keybind>
    <keybind key="W-s">
      <action>
        <name>Execute</name>
        <command>sh -c 'grim -g "$(slurp)" - | swappy -f -'</command>
      </action>
    </keybind>
    <keybind key="W-d">
      <action name="ForEach">
        <query desktop="current"/>
        <then>
          <action name="Iconify"/>
        </then>
      </action>
    </keybind>
    <keybind key="W-Q">
      <action name="Close"/>
    </keybind>
    <keybind key="W-1">
      <action name="GoToDesktop" to="1"/>
    </keybind>
    <keybind key="W-2">
      <action name="GoToDesktop" to="2"/>
    </keybind>
    <keybind key="W-3">
      <action name="GoToDesktop" to="3"/>
    </keybind>
    <keybind key="W-4">
      <action name="GoToDesktop" to="4"/>
    </keybind>
  </keyboard>
  <mouse>
    <default/>
    <!-- Show a custom menu on desktop right click -->
    <context name="Root">
      <mousebind button="Right" action="Press">
        <action name="ShowMenu" menu="some-custom-menu"/>
      </mousebind>
    </context>
  </mouse>
  <libinput>
    <device>
      <scrollFactor>1</scrollFactor>
      <naturalScroll>yes</naturalScroll>
    </device>
  </libinput>
  <snapping>
    <!-- Set range to 0 to disable window snapping completely -->
    <range>10</range>
    <overlay enabled="yes">
      <delay inner="500" outer="500"/>
    </overlay>
    <topMaximize>yes</topMaximize>
    <notifyClient>always</notifyClient>
  </snapping>
  <theme>
    <name>Qogir-Dark</name>
    <icon>Qogir-Dark</icon>
    <titlebar>
      <layout>iconify,max,close</layout>
      <showTitle>yes</showTitle>
    </titlebar>
    <cornerRadius>0</cornerRadius>
    <keepBorder>yes</keepBorder>
    <dropShadows>yes</dropShadows>
    <font place="ActiveWindow">
      <name>Commissioner</name>
      <size>11</size>
      <slant>normal</slant>
      <weight>bold</weight>
    </font>
    <font place="InactiveWindow">
      <name>Commissioner</name>
      <size>11</size>
      <slant>normal</slant>
      <weight>bold</weight>
    </font>
    <font place="MenuHeader">
      <name>Commissioner</name>
      <size>11</size>
      <slant>normal</slant>
      <weight>normal</weight>
    </font>
    <font place="MenuItem">
      <name>Commissioner</name>
      <size>11</size>
      <slant>normal</slant>
      <weight>normal</weight>
    </font>
    <font place="OnScreenDisplay">
      <name>Commissioner</name>
      <size>11</size>
      <slant>normal</slant>
      <weight>normal</weight>
    </font>
  </theme>
</labwc_config>
